$ORIGIN .
$TTL 5m ; 5 minutes
ocp3.example.org IN SOA ns.ocp3.example.org. dnsadmin (
                             2018050100 ; serial
                             28800      ; refresh (8 hours)
                             3600       ; retry (1 hour)
                             604800     ; expire (1 week)
                             86400      ; minimum (1 day)
                             )
                    NS       ns.ocp3.example.org.
					
$ORIGIN apps.ocp3.example.org.
*                   A        192.168.1.5

$ORIGIN internal.ocp3.example.org.
app-node-0          A        10.0.0.50
app-node-1          A        10.0.0.50
app-node-2          A        10.0.0.50
infra-node-0        A        10.0.0.50
infra-node-1        A        10.0.0.50
infra-node-2        A        10.0.0.50
master-0            A        10.0.0.50
master-1            A        10.0.0.50
master-2            A        10.0.0.50

$ORIGIN ocp3.example.org.
dns                 A        192.168.1.2
nexus               A        192.168.1.3
ntp                 A        192.168.1.4
ns                  A        192.168.1.2
ocp3                A        192.168.1.5
