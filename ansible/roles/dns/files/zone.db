$ORIGIN .
$TTL 5m ; 5 minutes
example.com IN SOA dns.example.com. dnsadmin (
                             2018050100 ; serial
                             28800      ; refresh (8 hours)
                             3600       ; retry (1 hour)
                             604800     ; expire (1 week)
                             86400      ; minimum (1 day)
                             )
                    NS       dns.example.com.
					
$ORIGIN apps.example.com.
